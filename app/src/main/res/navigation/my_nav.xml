<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.ccs_test_2.features.valuteListScreen.presentation.ValuteListFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_valute_list" />
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.example.ccs_test_2.features.favoriteScreen.presentation.FavoriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favorite" />

    <action
        android:id="@+id/action_to_main_fragment"
        app:destination="@id/mainFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />

    <action
        android:id="@+id/action_to_favorite_fragment"
        app:destination="@id/favouriteFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim" />
</navigation>